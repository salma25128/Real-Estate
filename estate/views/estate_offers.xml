<odoo>
<record id="offers_tree" model="ir.ui.view">
    <field name="name"> offers tree</field>
    <field name="model">estate.offers</field>
    <field name="arch" type="xml">
        <tree>
             <field name="partner_id"/>
            <field name="price"/>
            <field name="status"/>
            <field name="create_date"/>
            <field name="validity"/>
        </tree>
    </field>
</record>

    <record id="offers_form" model="ir.ui.view">
    <field name="name"> offers form</field>
    <field name="model">estate.offers</field>

    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>

                     <field name="partner_id"/>
                     <field name="price"/>
                     <field name="status"/>
                     <field name="create_date"/>
                     <field name="validity"/>

                </group>
      </sheet>
        </form>
    </field>
</record>


  <record id="offers_action" model="ir.actions.act_window">
        <field name="name">Property offers </field>
        <field name="res_model">estate.offers</field>

    </record>


</odoo>
